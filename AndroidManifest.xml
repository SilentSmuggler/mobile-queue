<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silentlabs.android.mobilequeue"
    android:installLocation="auto"
    android:versionCode="0001100000100"
    android:versionName="1.8.4" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="MobileQueueApplication"
        android:icon="@drawable/ic_launcher_netflix"
        android:label="@string/app_name" >
        <activity
            android:name=".activity.HomeActivity"
            android:configChanges="orientation|keyboardHidden"
            android:icon="@drawable/ic_launcher_netflix"
            android:label="@string/app_name"
            android:theme="@style/Theme.NetflixTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterAppActivity"
            android:label="@string/title_register"
            android:launchMode="singleTask"
            android:theme="@style/Theme.NetflixTheme" />
        <activity
            android:name=".activity.QueueActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_browse"
            android:theme="@style/Theme.NetflixTheme" />
        <activity
            android:name=".activity.BrowseActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_browse"
            android:theme="@style/Theme.NetflixTheme" />
        <activity
            android:name=".activity.DisplayProfileActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_profile"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".activity.AddTitleActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_add"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".activity.PreferencesActivity"
            android:label="@string/title_preferences"
            android:theme="@style/Theme.NetflixTheme" />
        <activity
            android:name=".activity.DisplayMovieDetailsActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_details"
            android:theme="@style/Theme.NetflixTheme" />
        <activity
            android:name=".activity.SearchActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_search"
            android:launchMode="singleTop"
            android:theme="@style/Theme.NetflixTheme" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".activity.SearchActivity" />
    </application>

</manifest>